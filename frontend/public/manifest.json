  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "阅读App首页 - 桌面版"
    },
    {
      "src": "/screenshots/mobile-reader.png",
